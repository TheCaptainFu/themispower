{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 * - node_title: The current node title (added via preprocessing).
 */
#}

{# Detect current path #}
{% set current_path = path('<current>') %}

<nav class="breadcrumb" role="navigation" aria-labelledby="system-breadcrumb">
  <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>

  <ol class="breadcrumb-list flex items-center gap-2 text-sm">

    {# Always show home #}
    <li class="breadcrumb-item">
      <a href="{{ path('<front>') }}" class="breadcrumb-link text-blue-600 hover:text-blue-800 transition-colors">
        Αρχική
      </a>
    </li>

    <li class="breadcrumb-separator text-gray-400 mx-1" aria-hidden="true">→</li>

    {# If path is /contact-us show "Επικοινωνία", else show normal title #}
    <li class="breadcrumb-item breadcrumb-item--active">
      <span class="breadcrumb-current text-gray-700 font-semibold">
        {% if current_path == '/contact' %}
          Επικοινωνία
        {% else %}
          {{ content['#links'][2].text }}
        {% endif %}
      </span>
    </li>

  </ol>
</nav>
